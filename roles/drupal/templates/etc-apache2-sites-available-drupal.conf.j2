<VirtualHost *:80>
    ServerName drupal.dev

    DocumentRoot /var/www/drupal/

    <Directory /var/www/drupal>
        Options -Indexes +FollowSymLinks
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>

    CustomLog /var/log/apache2/drupal.access.log combined
    ErrorLog /var/log/apache2/drupal.error.log
</VirtualHost>
